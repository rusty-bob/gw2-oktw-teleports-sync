#!/bin/sh
# Pre-commit hook to run formatting, linting, and tests
# This ensures code quality before committing

echo "ğŸ” Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track if any check failed
FAILED=0

# 1. Check formatting
echo "\nğŸ“ Checking code formatting..."
if ! cargo fmt -- --check; then
    echo "${RED}âŒ Code formatting check failed!${NC}"
    echo "${YELLOW}ğŸ’¡ Run 'cargo fmt' to fix formatting issues${NC}"
    FAILED=1
else
    echo "${GREEN}âœ… Code formatting OK${NC}"
fi

# 2. Run clippy
echo "\nğŸ” Running clippy linter..."
if ! cargo clippy -- -D warnings; then
    echo "${RED}âŒ Clippy found issues!${NC}"
    echo "${YELLOW}ğŸ’¡ Fix the warnings above before committing${NC}"
    FAILED=1
else
    echo "${GREEN}âœ… Clippy checks passed${NC}"
fi

# 3. Run tests
echo "\nğŸ§ª Running tests..."
if ! cargo test --quiet; then
    echo "${RED}âŒ Tests failed!${NC}"
    echo "${YELLOW}ğŸ’¡ Fix failing tests before committing${NC}"
    FAILED=1
else
    echo "${GREEN}âœ… All tests passed${NC}"
fi

# 4. Check if code compiles
echo "\nğŸ”¨ Checking if code compiles..."
if ! cargo check --quiet; then
    echo "${RED}âŒ Code does not compile!${NC}"
    FAILED=1
else
    echo "${GREEN}âœ… Code compiles successfully${NC}"
fi

# Final result
echo "\nâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
if [ $FAILED -eq 1 ]; then
    echo "${RED}âŒ Pre-commit checks FAILED${NC}"
    echo "${YELLOW}Please fix the issues above before committing.${NC}"
    echo "To skip these checks (not recommended), use: git commit --no-verify"
    exit 1
else
    echo "${GREEN}âœ… All pre-commit checks PASSED${NC}"
    echo "Proceeding with commit..."
    exit 0
fi

